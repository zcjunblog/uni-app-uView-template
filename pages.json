{
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/mall/index",
      "style": {
        "navigationBarTitleText": "商城"
      }
    },
    {
      "path": "pages/orders/index",
      "style": {
        "navigationBarTitleText": "订单",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/user/index",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationBarBackgroundColor": "#4E6EF2",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "程序名字",
    "navigationBarBackgroundColor": "#fff",
    "backgroundColor": "#F8F8F8",
    "usingComponents": {
      "van-icon": "/wxcomponents/vant/icon/index",
      "van-popup": "/wxcomponents/vant/popup/index",
      "van-button": "/wxcomponents/vant/button/index",
      "van-tab": "/wxcomponents/vant/tab/index",
      "van-tabs": "/wxcomponents/vant/tabs/index",
      "van-search": "/wxcomponents/vant/search/index",
      "van-collapse": "/wxcomponents/vant/collapse/index",
      "van-collapse-item": "/wxcomponents/vant/collapse-item/index",
      "van-dialog": "/wxcomponents/vant/dialog/index",
      "van-calendar": "/wxcomponents/vant/calendar/index",
      "van-radio": "/wxcomponents/vant/radio/index",
      "van-radio-group": "/wxcomponents/vant/radio-group/index",
      "van-checkbox": "/wxcomponents/vant/checkbox/index",
      "van-checkbox-group": "/wxcomponents/vant/checkbox-group/index",
      "van-steps": "/wxcomponents/vant/steps/index"
    }
  },
  "tabBar": {
    "color": "#656565",
    "selectedColor": "#4E6EF2",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/index/index",
        "iconPath": "static/tabs/home.png",
        "selectedIconPath": "static/tabs/home-active.png"
      },
      {
        "text": "下单",
        "pagePath": "pages/mall/index",
        "iconPath": "static/tabs/cart.png",
        "selectedIconPath": "static/tabs/cart-active.png"
      },
      {
        "text": "订单",
        "pagePath": "pages/orders/index",
        "iconPath": "static/tabs/order.png",
        "selectedIconPath": "static/tabs/order-active.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/user/index",
        "iconPath": "static/tabs/user.png",
        "selectedIconPath": "static/tabs/user-active.png"
      }
    ],
    "position": "bottom"
  }
}
